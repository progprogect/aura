# Database - получите на railway.app при создании PostgreSQL сервиса
DATABASE_URL="postgresql://postgres:password@containers-us-west-123.railway.app:1234/railway"

# MongoDB - Railway MongoDB для AI embeddings
# Формат: mongodb://mongo:password@host:port
MONGODB_URL="mongodb://mongo:password@containers-us-west-789.railway.app:27017"

# Redis - Railway автоматически создаст при добавлении Redis Plugin
# Формат: redis://default:password@host:port
REDIS_URL="redis://default:password@containers-us-west-456.railway.app:6379"

# OpenAI API Key - для AI-чата
OPENAI_API_KEY="sk-proj-..."

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

